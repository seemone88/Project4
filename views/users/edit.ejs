<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Edit <%= (last_name)?(first_name+" "+last_name):(first_name) %>'s Info</title>
  </head>
  <body>
    <h1>Edit <%= (last_name)?(first_name+" "+last_name):(first_name) %>'s Info</h1>
    <% for( var i = 0; i < errmsgs.length; i++ ){%>
      <p><%= errmsgs[i] %></p>
    <% } %>
    <form action="/users/<%= id %>" method="post">
      <input type="hidden" name="_method" value="put"></div>
      <input type="hidden" name="_id" value="<%= id %>"></div>
      <div><label for="email">Email</label><input type="text" name="email" value="<%= email %>"></div>
      <div><label for="first_name">First Name</label><input type="text" name="first_name" value="<%= first_name %>"></div>
      <div><label for="last_name">Last Name</label><input type="text" name="last_name" value="<%= last_name %>"></div>
      <div><label for="cur_password">Current Password</label><input type="password" name="cur_password"></div>
      <div><label for="password">New Password</label><input type="password" name="password"></div>
      <div><label for="password_confirmation">Password Confirmation</label><input type="password" name="password_confirmation"></div>
      <div><input type="submit" name="name" value="Edit">
    </form>
    <br><br>
    <a href="/users/<%= id %>">Back</a>
  </body>
</html>
